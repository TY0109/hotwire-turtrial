<p style="color: green"><%= notice %></p>

<h1>Cats</h1>

<div id="cats">
  <% @cats.each do |cat| %>
    <%= render cat %>
    <p>
      <%= link_to "Show this cat", cat %>
    </p>
  <% end %>
</div>

<%# ページネーションを表示する。ページ番号のリンク、次へ、前へ %>
<%= paginate @cats %>

<%= link_to "New cat", new_cat_path %>
